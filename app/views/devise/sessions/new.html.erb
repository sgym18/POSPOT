<div class="container col-5 mx-auto mt-5">
  <div class="row">
    <h2 class="text-center">Log in</h2>
  </div>
  
  <div class="row">
    <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="field mb-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control" %>
      </div>
      <!--ログイン保持実装後で決める-->
      <!--<%# if devise_mapping.rememberable? %>-->
      <!--  <div class="field">-->
      <!--    <%#= f.check_box :remember_me %>-->
      <!--    <%#= f.label :remember_me %>-->
      <!--  </div>-->
      <!--<%# end %>-->

      <div class="actions d-grid">
        <%= f.submit "ログイン", class: "btn btn-lg btn-dark" %>
      </div>
    <% end %>
  </div>
  
  <div class="row mt-2">
    <p class="text-end"><%= render "devise/shared/links" %></p>
  </div>
</div>