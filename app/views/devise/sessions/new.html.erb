<div class="container col-5 mx-auto mt-5">
  <div class="row">
    <h2 class="text-center">Log in</h2>
  </div>

  <div class="row mt-3">
    <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="form-floating mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", id: "floatingEmail", class: "form-control" %>
        <%= f.label :email, for: "floatingEmail" %>
      </div>

      <div class="form-floating mb-3">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", id: "floatingPassword", class: "form-control" %>
        <%= f.label :password, "パスワード", for: "floatingPassword" %>
      </div>

      <div class="actions d-grid">
        <%= f.submit "ログイン", class: "btn btn-lg btn-dark" %>
      </div>
    <% end %>
  </div>

  <div class="row mt-2">
    <p class="text-end"><%= render "devise/shared/links" %></p>
  </div>
</div>