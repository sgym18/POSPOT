<%= form_with url: search_path, method: :get, local: true do |f| %>
  <div class="d-flex">
    <%= f.text_field :keyword, placeholder: "キーワードを入力", class: "form-control" %>
    <%= f.button :type => "submit", class: 'btn btn-dark' do %>
      <i class="fa-solid fa-magnifying-glass"></i>
    <% end %>
  </div>
<% end %>