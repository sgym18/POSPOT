<div class="container-fluid">
  <div class="row">
    <div class="col-4 offset-4">
      <ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button
            class="nav-link active"
            id="post-tab"
            data-bs-toggle="tab"
            data-bs-target="#post"
            type="button"
            role="tab"
            aria-controls="post"
            aria-selected="true"
          >
            投稿
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link"
            id="tag-tab"
            data-bs-toggle="tab"
            data-bs-target="#tag"
            type="button"
            role="tab"
            aria-controls="tag"
            aria-selected="false"
          >
            タグ
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link"
            id="user-tab"
            data-bs-toggle="tab"
            data-bs-target="#user"
            type="button"
            role="tab"
            aria-controls="user"
            aria-selected="false"
          >
            User
          </button>
        </li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-4 offset-4 tab-content" id="myTabContent">
      <div
        class="tab-pane fade show active"
        id="post"
        role="tabpanel"
        aria-labelledby="post-tab"
      >
        <div class="row mt-2">
          <div class="col-12">
            <% if @post_result.present? %>
              <%= render 'posts/index', posts: @post_result %>
            <% else %>
              <p class="text-light">検索結果はありません</p>
            <% end %>
          </div>
        </div>
      </div>
      <div
        class="tab-pane fade show active"
        id="tag"
        role="tabpanel"
        aria-labelledby="tag-tab"
      >
        <div class="row mt-2">
          <div class="col-12">
            <% if @tag_result.present? %>
              <%= render 'posts/index', posts: @tag_result %>
            <% else %>
              <p class="text-light">検索結果はありません</p>
            <% end %>
          </div>
        </div>
      </div>
      <div
        class="tab-pane fade"
        id="user"
        role="tabpanel"
        aria-labelledby="user-tab"
      >
        <% if @user_result.present? %>
          <%= render 'users/index', users: @user_result %>
        <% else %>
          <p class="text-light">検索結果はありません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>