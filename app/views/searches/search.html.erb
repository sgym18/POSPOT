<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button
            class="nav-link active"
            id="post-tab"
            data-bs-toggle="tab"
            data-bs-target="#post"
            type="button"
            role="tab"
            aria-controls="post"
            aria-selected="true"
          >
            投稿
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link"
            id="user-tab"
            data-bs-toggle="tab"
            data-bs-target="#user"
            type="button"
            role="tab"
            aria-controls="user"
            aria-selected="false"
          >
            User
          </button>
        </li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-6 offset-3 tab-content" id="myTabContent">
      <div
        class="tab-pane fade show active"
        id="post"
        role="tabpanel"
        aria-labelledby="post-tab"
      >
        <div class="row mt-2">
          <% @post_result.each do |post| %>
            <div class="col-7">
              <%= link_to post_path(post) do %>
                <p><%= image_tag post.get_image(250,150) %></p>
              <% end %>
            </div>
            <div class="col-5">
              <div class="row">
                <div class="col-9">
                  <p><%= post.spot %></p>
                </div>
                <div class="col-3">
                  <% if user_signed_in? %>
                    <% if post.bookmarked_by?(current_user) %>
                      <%= link_to post_bookmarks_path(post), method: :delete do %>
                        <span class="h3 text-dark"><i class="fa-solid fa-bookmark"></i></span>
                      <% end %>
                    <% else %>
                      <%= link_to post_bookmarks_path(post), method: :post do %>
                        <span class="h3 text-dark"><i class="fa-regular fa-bookmark"></i></span>
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
              </div>
              <div class="row">
                <% post.tags.each do |tag| %>
                  <div class="col-auto flex-wrap">
                    <span class="text-white bg-dark border border-dark rounded small px-1">
                      #<%= tag.name %>
                    </span>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div
        class="tab-pane fade"
        id="user"
        role="tabpanel"
        aria-labelledby="user-tab"
      >
        <% @user_result.each do |user| %>
          <div class="row mb-2 mt-2 pb-2 border-bottom border-dark">
            <%= link_to user_path(user), class: "col-8 d-flex align-items-center text-decoration-none link-dark" do %>
              <%= image_tag user.get_profile_image(100,100), class: "rounded-circle" %>
              <p><%= user.name %></p>
            <% end %>
            <div class="col-4 d-flex align-items-center">
              <% if user_signed_in? %>
                <% unless user == current_user %>
                  <% if current_user.following?(user) %>
                    <%= link_to user_relationships_path(user), method: :delete, class: "btn btn-dark" do %>
                      <i class="fa-solid fa-user-minus"></i>　フォローを外す
                    <% end %>
                  <% else %>
                    <%= link_to user_relationships_path(user), method: :post, class: "btn btn-dark" do %>
                      <i class="fa-solid fa-user-plus"></i>　フォローする
                    <% end %>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>