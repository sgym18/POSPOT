<!--投稿、タグの検索結果は同じタブで見たい。できない？-->
<div class="container-fluid">
  <div class="row">
    <div class="col-6 offset-3">
      <ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button
            class="nav-link active"
            id="post-tab"
            data-bs-toggle="tab"
            data-bs-target="#post"
            type="button"
            role="tab"
            aria-controls="post"
            aria-selected="true"
          >
            投稿
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link"
            id="tag-tab"
            data-bs-toggle="tab"
            data-bs-target="#tag"
            type="button"
            role="tab"
            aria-controls="tag"
            aria-selected="false"
          >
            タグ
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link"
            id="user-tab"
            data-bs-toggle="tab"
            data-bs-target="#user"
            type="button"
            role="tab"
            aria-controls="user"
            aria-selected="false"
          >
            User
          </button>
        </li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-6 offset-3 tab-content" id="myTabContent">
      <div
        class="tab-pane fade show active"
        id="post"
        role="tabpanel"
        aria-labelledby="post-tab"
      >
        <div class="row mt-2">
          <%= render 'posts/index', posts: @post_result %>
        </div>
      </div>
      <div
        class="tab-pane fade show active"
        id="tag"
        role="tabpanel"
        aria-labelledby="tag-tab"
      >
        <div class="row mt-2">
          <%= render 'posts/index', posts: @tag_result %>
        </div>
      </div>
      <div
        class="tab-pane fade"
        id="user"
        role="tabpanel"
        aria-labelledby="user-tab"
      >
        <%= render 'users/index', users: @user_result %>
      </div>
    </div>
  </div>
</div>