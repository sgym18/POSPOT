<div class="container-fluid">
  <div class="row">
    <div class="col-8">
      <div class="row">
        <div class="col">
          <%= form_with url: map_request_path, method: :get, local: false do |f| %>
            <%= f.text_field :address, placeholder: "住所で検索", class: "form-control rounded-pill" %>
          <% end %>
        </div>
        <div class="col text-center">
          <%= link_to "新規投稿", new_post_path, class: "btn btn-outline-dark rounded-pill w-100" %>
        </div>
        <div class="col text-center">
          <!--後でリンク変える-->
          <%= link_to "ブックマーク", root_path, class: "btn btn-outline-dark rounded-pill w-100" %>
        </div>
      </div>
      <div class="row mt-2 justify-content-center">
        <div id="index_map"></div>
      </div>
    </div>
    <div class="col-4">
      <div class="row">
        <h4 class="text-center">投稿一覧</h4>
      </div>
      <div class="row mt-2">
        <%= render 'index', posts: @posts %>
      </div>
    </div>
  </div>
</div>

<!--後でユーザーが登録した住所をセンターにする-->
<!--みんなが投稿した場所にピンが刺さる-->
<script>
  let mapInstance

  function initMap(){
    mapInstance = new google.maps.Map(document.getElementById('index_map'), {
    center: {lat: gon.user.latitude, lng: gon.user.longitude},
    zoom: 8
    });
  }
</script>

<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_KEY'] %>&callback=initMap" async defer></script>