<div class="container-fluid">
  <div class="row">
    <div class="col-8">
      <div class="row">
        <div class="col">
          <%= form_with url: map_request_path, method: :get, local: false do |f| %>
            <%= f.text_field :address, placeholder: "住所で検索", class: "form-control rounded-pill" %>
          <% end %>
        </div>
        <div class="col text-center">
          <%= link_to "新規投稿", new_post_path, class: "btn btn-outline-dark rounded-pill w-100" %>
        </div>
        <div class="col text-center">
          <!--後でリンク変える-->
          <%= link_to "ブックマーク", root_path, class: "btn btn-outline-dark rounded-pill w-100" %>
        </div>
      </div>
      <div class="row mt-2 justify-content-center">
        <div id="index_map"></div>
      </div>
    </div>
    <div class="col-4">
      <div class="row">
        <h4 class="text-center">投稿一覧</h4>
      </div>
      <% @posts.each do |post| %>
        <div class="row mt-2">
          <div class="col-7">
            <p><%= image_tag post.get_image(250,150) %></p>
          </div>
          <div class="col-5">
            <div class="row">
              <div class="col-9">
                <p><%= post.spot %></p>
              </div>
              <div class="col-3">
                <% if post.bookmarked_by?(current_user) %>
                  <%= link_to post_bookmarks_path(post), method: :delete do %>
                    <span class="h3"><i class="fa-solid fa-bookmark"></i></span>
                  <% end %>
                <% else %>
                  <%= link_to post_bookmarks_path(post), method: :post do %>
                    <span class="h3"><i class="fa-regular fa-bookmark"></i></span>
                  <% end %>
                <% end %>
              </div>
            </div>
            <div class="row">
              <% post.tags.each do |tag| %>
                <div class="col-auto flex-wrap">
                  <span class="text-white bg-dark border border-dark rounded small px-1">
                    #<%= tag.name %>
                  </span>
                </div>
              <% end %>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>

<!--後でユーザーが登録した住所をセンターにする-->
<!--みんなが投稿した場所にピンが刺さる-->
<script>
  let mapInstance

  function initMap(){
    mapInstance = new google.maps.Map(document.getElementById('index_map'), {
    center: {lat: -34.397, lng: 150.644},
    zoom: 8
    });
  }
</script>

<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_KEY'] %>&callback=initMap" async defer></script>