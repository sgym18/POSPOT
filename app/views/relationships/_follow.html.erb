<% if user.is_deleted == false && current_user.name != "ゲストユーザー" %>
  <% unless user == current_user %>
    <% if current_user.following?(user) %>
      <%= link_to user_relationships_path(user), method: :delete, remote: true, class: "btn btn-primary btn-sm rounded-pill shadow-sm" do %>
        <i class="fa-solid fa-user-minus"></i><br>フォロー解除
      <% end %>
    <% else %>
      <%= link_to user_relationships_path(user), method: :post, remote: true, class: "btn btn-primary btn-sm rounded-pill shadow-sm" do %>
        <i class="fa-solid fa-user-plus"></i><br>フォローする
      <% end %>
    <% end %>
  <% end %>
<% end %>