<div class="container-fluid col-8 mt-5">
  <div class="row justify-content-center card">
    <div class="card-body">
      <h3 class="card-title mb-5">Users</h3>
      <%= link_to "全ユーザー", admin_users_path, class: "btn btn-dark rounded-pill" %>
      <%= link_to "有効中ユーザー", admin_users_path(status: "有効"), class: "btn btn-success rounded-pill" %>
      <%= link_to "退会済ユーザー  ", admin_users_path(status: "退会"), class: "btn btn-danger rounded-pill" %>

      <table class="table table-borderless table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td>
                <%= link_to edit_admin_user_path(user), class: "text-dark" do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td><%= user.email %></td>
              <% if user.is_deleted == true %>
                <td class="text-danger font-weight-bold">退会</td>
              <% else %>
                <td class="text-success font-weight-bold">有効</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>