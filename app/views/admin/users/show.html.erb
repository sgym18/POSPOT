<div class="container-fluid col-5 mx-auto mt-5">
  <div class="row">
    <h3 class="mb-5">User編集</h3>
  </div>

  <div class="row">
    <%= form_with model: [ :admin, @user ] do |f| %>
      <div class="mb-3">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, placeholder: "名前", class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :introduction, "自己紹介" %>
      　<%= f.text_area :introduction, placeholder: "自己紹介", class: 'form-control', rows: "3" %>
      </div>

      <div class="mb-3">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address, placeholder: "住所", class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :profile_image, "画像" %>
        <%= f.file_field :profile_image, accept: "image/*", class: 'form-control' %>
      </div>

      <div class="mb-3 d-flex justify-content-center">
        <!--こっちのボタンにしたい-->
        <%#= f.radio_button :is_deleted, false, class: "btn-check", name: "options-outlined", id: "success-outlined", autocomplete: "off" %>
        <%#= f.label :is_deleted, "有効", class: "btn btn-outline-success me-2 flex-fill", for: "success-outlined" %>
        <%#= f.radio_button :is_deleted, true, class: "btn-check", name: "options-outlined", id: "danger-outlined", autocomplete: "off" %>
        <%#= f.label :is_deleted, "退会", class: "btn btn-outline-danger flex-fill", for: "danger-outlined" %>
        <%= f.radio_button :is_deleted, false %><%= f.label :is_deleted, "有効", value: true %>
        <%= f.radio_button :is_deleted, true %><%= f.label :is_deleted, "退会", value: false %>
      </div>

      <div class="d-grid">
        <%= f.submit "変更を保存", class: "btn btn-lg btn-dark" %>
      </div>
    <% end %>
    <!--後でカラー変更-->
    <div class="d-grid mt-3">
      <%= link_to "User一覧へ戻る", admin_users_path, class: "btn btn-lg btn-dark" %>
    </div>
  </div>
</div>