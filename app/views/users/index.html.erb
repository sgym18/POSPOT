<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <% @users.each do |user| %>
        <div class="row mb-4 pb-4 border-bottom border-dark">
          <%= link_to user_path(user), class: "col-8 d-flex align-items-center text-decoration-none link-dark" do %>
            <%= image_tag user.get_profile_image(100,100), class: "rounded-circle" %>
            <p><%= user.name %></p>
          <% end %>
          <div class="col-4 d-flex align-items-center">
            <% unless user == current_user %>
              <% if current_user.following?(user) %>
                <%= link_to user_relationships_path(user), method: :delete, class: "btn btn-dark" do %>
                  <i class="fa-solid fa-user-minus"></i>　フォローを外す
                <% end %>
              <% else %>
                <%= link_to user_relationships_path(user), method: :post, class: "btn btn-dark" do %>
                  <i class="fa-solid fa-user-plus"></i>　フォローする
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

