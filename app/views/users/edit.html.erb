<div class="container col-5 mx-auto mt-5">
  <div class="row">
    <%= form_with model: @user do |f| %>
      <div class="mb-3">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, placeholder: "名前", class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :introduction, "自己紹介" %>
      　<%= f.text_area :introduction, placeholder: "自己紹介", class: 'form-control', rows: "3" %>
      </div>

      <div class="mb-3">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address, placeholder: "住所", class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :profile_image, "画像" %>
        <%= f.file_field :profile_image, accept: "image/*", class: 'form-control' %>
      </div>

      <div class="d-grid">
        <%= f.submit "変更を保存", class: "btn btn-lg btn-dark" %>
      </div>
    <% end %>
    <!--後でカラー変更-->
    <div class="d-grid mt-3">
      <%= link_to "退会する", quit_confirm_user_path(@user), class: "btn btn-lg btn-danger" %>
    </div>
    <div class="d-grid mt-3">
      <%= link_to "Prosileへ戻る", user_path(@user), class: "btn btn-lg btn-dark" %>
    </div>
  </div>
</div>