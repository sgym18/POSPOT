<div class="container-fluid col-5 mx-auto bg-light rounded">
  <div class="row py-3">
    <%= form_with model: @user do |f| %>
      <div class="form-floating my-3">
        <%= f.text_field :name, autofocus: true, placeholder: "名前", id: "floatingName", class: "form-control" %>
        <%= f.label :name, for: "floatingName" %>
      </div>
      <% if @user.errors.include?(:name) %>
        <span class="text-danger"><i class="fas fa-exclamation-circle"></i><%= @user.errors.full_messages_for(:name).first %></span>
      <% end %>

      <div class="form-floating my-3">
        <%= f.text_area :introduction, placeholder: "自己紹介", id: "floatingTextarea", class: "form-control" %>
        <%= f.label :introduction, "自己紹介", for: "floatingTextarea" %>
      </div>

      <div class="form-floating my-3">
        <%= f.text_field :address, placeholder: "住所", id: "floatingAddress", class: "form-control" %>
        <%= f.label :address, "マップの中心にしたい住所", for: "floatingAddress" %>
      </div>
      <% if @user.errors.include?(:address) %>
        <span class="text-danger"><i class="fas fa-exclamation-circle"></i><%= @user.errors.full_messages_for(:address).first %></span>
      <% end %>

      <div class="input-group my-3">
        <span class="input-group-text" id="inputGroupFileAddon01">アイコン</span>
        <%= f.file_field :profile_image, accept: "image/*", id: "inputGroupFile01", class: "form-control" %>
      </div>

      <div class="d-grid">
        <%= f.submit "変更を保存", class: "btn btn-lg btn-dark" %>
      </div>
    <% end %>
    <div class="d-grid mt-3">
      <%= link_to "退会する", quit_confirm_user_path(@user), class: "btn btn-lg btn-danger" %>
    </div>
    <div class="d-grid mt-3">
      <%= link_to "Profileへ戻る", user_path(@user), class: "btn btn-lg btn-outline-dark" %>
    </div>
  </div>
</div>