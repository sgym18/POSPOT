<% users.each do |user| %>
  <% if user.is_deleted == false %>
    <div class="row mb-2 mt-2 py-2 bg-light shadow rounded">
      <%= link_to user_path(user), class: "col-8 d-flex align-items-center text-decoration-none link-dark" do %>
        <%= image_tag user.get_profile_image(100,100), class: "rounded-circle me-2" %>
        <strong><%= user.name %></strong>
      <% end %>
      <div class="col-4 d-flex align-items-center" id="follow_<%= user.id %>">
        <%= render 'relationships/follow', user: user %>
      </div>
    </div>
  <% end %>
<% end %>