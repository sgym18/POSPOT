<% bookmark_posts.each do |post| %>
  <div class="card shadow mb-3">
    <div class="row">
      <div class="col-md-12 col-lg-7">
        <%= link_to post_path(post) do %>
          <%= image_tag post.get_image(500,300), class: "card-img" %>
        <% end %>
      </div>
      <div class="card-body pt-0 col-5">
        <div class="row">
          <div class="col-10 pt-2">
            <h5><%= post.spot %></h5>
          </div>
          <div class="col-2 d-flex justify-content-end align-items-start bookmark_<%= post.id %>">
            <%= render 'bookmarks/bookmark', post: post %>
          </div>
        </div>
        <div class="row">
          <div class="col-auto d-flex flex-wrap">
            <%= render 'posts/tags', post: post %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>