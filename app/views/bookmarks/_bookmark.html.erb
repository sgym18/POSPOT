<% if current_user.name != "ゲストユーザー" %>
  <% if post.bookmarked_by?(current_user) %>
    <%= link_to post_bookmarks_path(post), method: :delete do %>
      <span class="h3 text-primary"><i class="fa-solid fa-bookmark"></i></span>
    <% end %>
  <% else %>
    <%= link_to post_bookmarks_path(post), method: :post do %>
      <span class="h3 text-primary"><i class="fa-regular fa-bookmark"></i></span>
    <% end %>
  <% end %>
<% end %>